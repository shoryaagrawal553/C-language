#include <stdio.h> 

int main() // Main function
{
    int i, n, sum = 0; // Declare integer variables 'i', 'n', and 'sum', initializing 'sum' to 0
    
    printf("Enter a number: ");
 
    scanf("%d", &n);
    
    // Loop from 1 to 'n' to calculate the sum of natural numbers
    for(i = 1; i <= n; i++)
    {
        sum += i; // Add the current value of 'i' to 'sum'
    }
    
    // Print the calculated sum
    printf("\nSum = %d", sum);
    
    return 0;
}
