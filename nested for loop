#include<stdio.h>

int main()
{
    // Declare variables
    int n, i, j;
    
    // Ask the user to enter a number
    printf("Enter a number\n");
    scanf("%d", &n);
    
    // Outer loop for rows
    for(i=1; i<=n; i++)
    {
        // Inner loop for columns
        for(j=1; j<=i; j++)
        {
            // Print asterisk
            printf("* ");
        }
        // Move to the next line after each row
        printf("\n");
    }
}
